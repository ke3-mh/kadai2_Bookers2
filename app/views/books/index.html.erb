<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<!-- ユーザーの詳細 -->
<div>
  <h2>User info</h2>
  <%= image_tag @user.get_profile_image(100,100) %>
  <p>name <%= @user.name %></p>
  <p>introduction <%= @user.introduction %></p>
  <p><%= link_to "プロフィール編集(後でボタンに変える)", edit_user_path(current_user.id) %></p>
</div>
<br>

<!-- 投稿フォーム  -->
<div>
  <h2>New book</h2>
    <%= form_with model: @newbook do |f| %>
      <p>Title</p>
        <%= f.text_field :title %>
      <p>Option</p>
        <%= f.text_area :body %>
      <%= f.submit 'Create Book' %>
    <% end %>
</div>
<br>

<!--book一覧-->
<h2>Books</h2>
<% @books.each do |book| %>
  <div>
    <%=link_to image_tag(book.user.get_profile_image(100,100)), user_path(book.user.id) %>
    <p><%= link_to "#{book.title}", book_path(book.id) %></p>
    <p>Body：<%= book.body %></p>
  </div>
<% end %>