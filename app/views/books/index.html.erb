<div class="container px-5 px-sm-0">
  <% flash.each do |message_type, messages| %>
    <% if messages.count > 0 %>
      <h3><%= messages.count %> errors prohibited this obj from being saved:</h3>
    <% end %>
    <ul>
      <% messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/form', user: @user, newbook: @newbook %>
    </div>

    <div class="col-md-8 offset-md-1">
      <%= render 'books/booklists', book: @books %>

    </div>
  </div>
</div>