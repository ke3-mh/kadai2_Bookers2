<h2>Editing Book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %> error prohibited this obj from being<br>
  saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
  <label for="inputTitle">Title</label>
  <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"題名"%>

  <label for="inputOpinion">Opinion</label>
  <%= f.text_area :body, id:"inputOpinion" %>

  <%= f.submit "Update Book" %>

  <%= link_to "show", book_path(@book.id) %>
  |
  <%= link_to "Back", book_path %>

<% end %>