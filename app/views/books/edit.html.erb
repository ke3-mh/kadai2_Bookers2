<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing Book</h2>
      <% if @book.errors.any? %>
        <%= @book.errors.count %> error prohibited this obj from being<br>
        saved:
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @book do |f| %>
        <div class="form-group">
          <label for="inputName">Title</label></br>
          <%= f.text_field :title, autofocus: true, id:"inputTitle", class:"form-control book_title" %>
        </div>

        <div class="form-group">
          <label for="inputOpinion">Opinion</label></br>
          <%= f.text_area :body, id:"body", class:"form-control book_body"  %>
        </div>

        <%= f.submit "Update User", class:"btn btn-secondary" %>

      <% end %>
    </div>
  </div>
</div>