<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
        <%= @user.errors.count %> error prohibited this obj from being<br>
        saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <label for="inputName">Name</label></br>
          <%= f.text_field :name, autofocus: true, id:"inputName", class:"form-control user_name" %>
        </div>

        <div class="form-group">
          <label for="inputImage">ProfileImage</label></br>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class:"form-control-file user_image"%>
        </div>

        <div class="form-group">
          <label for="inputIntroduction">Introduction</label></br>
          <%= f.text_area :introduction, id:"inputIntroduction", class:"form-control introduction"  %>
        </div>

        <%= f.submit "Update User", class:"btn btn-secondary" %>

      <% end %>
    </div>
  </div>
</div>